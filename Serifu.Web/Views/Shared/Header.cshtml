<header>
    <h1>
        <a asp-controller="Home" asp-action="Home" aria-label="Serifu.org"><img src="/serifu.svg" aria-hidden="true" /></a>
    </h1>
    <nav>
        <a href="#">@Strings.NavLinkAbout</a>
        <a href="https://github.com/maxkagamine/Serifu" target="_blank">GitHub</a>
        @if (CultureInfo.CurrentCulture.TwoLetterISOLanguageName == "en")
        {
            <a asp-route-lang="ja" lang="ja" hreflang="ja">日本語</a>
        }
        else
        {
            <a asp-route-lang="en" lang="en" hreflang="en">English</a>
        }
        <span class="subtitle">@Strings.NavSubtitle</span>
    </nav>
</header>
