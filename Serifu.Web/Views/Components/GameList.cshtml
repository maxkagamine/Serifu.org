@model IEnumerable<GameListRow>

<table>
    <thead>
        <tr>
            <th>Game</th>
            <th>Copyright</th>
            <th>Links</th>
        </tr>
    </thead>
    <tbody>
        @foreach (GameListRow row in Model)
        {
            <tr>
                <td>
                    <div class="game-icon" style="--sprite-index: @((int)row.Source)"></div>
                    <span>@row.Game</span>
                </td>
                <td>
                    <span class="copy">Â©</span> @row.Copyright
                </td>
                <td>
                    @for (int i = 0; i < row.Links.Count; i++)
                    {
                        ExternalLink link = row.Links[i];
                        
                        if (i > 0)
                        {
                            <text> / </text>
                        }

                        <a href="@link.Url" target="_blank" rel="external noreferrer nofollow">@link.Label</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
